<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:c="http://www.springframework.org/schema/c"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="ticketServiceBeforeAdvice" class="com.example.demo.aop.TicketServiceBeforeAdvice" />

    <bean id="ticketServiceAfterReturningAdvice" class="com.example.demo.aop.TicketServiceAfterReturningAdvice" />

    <!--<bean id="railwayStation2" class="com.example.demo.aop.RailwayStation"></bean>-->

    <bean id="testAop" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="proxyInterfaces">
            <value>com.example.demo.aop.TicketService</value>
        </property>

        <property name="target">
            <bean class="com.example.demo.aop.RailwayStation" />
        </property>

        <property name="interceptorNames">
            <list>
                <value>ticketServiceBeforeAdvice</value>
                <value>ticketServiceAfterReturningAdvice</value>
            </list>
        </property>
    </bean>

</beans>
